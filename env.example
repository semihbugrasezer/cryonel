# CRYONEL Environment Configuration
# Copy this file to .env and fill in your values

# General
NODE_ENV=production
APP_URL=http://localhost:3000
ENCRYPTION_MASTER_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef
PORT=8080
REGION=eu

# Database
POSTGRES_USER=cryonel
POSTGRES_PASSWORD=cryonel123
POSTGRES_DB=cryonel
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_SSL=false

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379
REDIS_DB=0

# JWT / Auth
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=change_this_another_long_random_secret_key_at_least_32_chars
JWT_ACCESS_TTL=900
JWT_REFRESH_TTL=604800

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
API_BASE_URL=http://localhost:8080

# Stripe (optional - for billing)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PUBLISHABLE_KEY=pk_test_...

# Solana RPC (EU endpoints recommended)
SOLANA_RPC_PRIMARY=https://api.mainnet-beta.solana.com
SOLANA_RPC_FALLBACK=https://solana-api.projectserum.com

# Logging
LOG_LEVEL=info

# Monitoring (optional)
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
LOKI_ENABLED=true

# Security
RATE_LIMIT_AUTH=10
RATE_LIMIT_TRADING=60
RATE_LIMIT_WINDOW=60
